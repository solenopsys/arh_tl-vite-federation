{
    "compilerOptions": {
        "rootDir": "./src",
        "baseUrl": "./src",
        // "composite": true,
        "types": [
            "vite/client"
        ],
        "strictNullChecks": true,
        "outDir": "lib",
        "module": "CommonJS",
        "target": "ESNext",
        "lib": [
            "ESNext"
        ],
        "declaration": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "noImplicitThis": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": ["src/**/*.ts"], // Specify the files to include in compilation

}